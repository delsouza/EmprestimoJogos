@model Emprestimo

<div class="container p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1>Excluir empréstimos</h1>
    </div>

    <form method="post" asp-controller="EmprestimoJogo" asp-action="Excluir">
        <input type="hidden" asp-for=Id />

        <h2>Deseja excluir o empréstimo abaixo?</h2>

        <div class="mb-3">
            <label for="Cliente" class="form-label">Cliente:</label>
            <input type="text" class="form-control" asp-for="PessoaRecebe" id="Cliente" disabled>
        </div>

        <div class="mb-3">
            <label for="Fornecedor" class="form-label">Fornecedor:</label>
            <input type="text" class="form-control" asp-for="PessoaFornece" id="Fornecedor" disabled>
        </div>

        <div class="mb-3">
            <label for="Jogo" class="form-label">Jogo:</label>
            <input type="text" class="form-control" asp-for="JogoEmprestado" id="Jogo" disabled>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-danger w-50">Excluir</button>
            <a class="btn btn-primary w-50" asp-controller="EmprestimoJogo" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>